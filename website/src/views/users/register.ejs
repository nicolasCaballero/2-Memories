<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/userRegister.css">
    <script src="/js/passwordToggle.js"></script>
    <title>REGISTRO | MEMORIES</title>
</head>

<body>
    <div class="container-fluid">
        <%- include('../partials/headerPartial.ejs') %>
        <video autoplay muted loop id="videoBack">
            <source src="/img/paracaidas.mp4" type="video/mp4">
        </video>

        <section id="titulo" class="row">
            <article class="col-12">
                <div class="text-left mt-3 mb-3">
                    <div class="text-center mt-3 mb-3">
                        <h2>¡Creá tu Cuenta!</h2>
                    </div>
                    <div class="div-errors">
                        <ul>

                        </ul>
                    </div>
            </article>
        </section>
        <section class="bg-home pt-15">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-10 col-sm-12 mx-auto pt-2 fondo shadow-sm rounded-lg">
                        <div class="signup-form mt-3">
                            <form class="form" action="/registro" method="post">
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-pill name" name="name"
                                        value="<%= typeof old != 'undefined' ? old.name : '' %>" placeholder="nombre" autofocus>
                                        <% if(typeof errors != 'undefined' && errors.name){%>
                                            <span class="text-danger"> <%= errors.name.msg %></span>
                                            <%}%>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-pill lastName" name="lastName"
                                    value="<%= typeof old != 'undefined' ? old.lastName : '' %>" placeholder="apellido">
                                    <% if(typeof errors != 'undefined' && errors.lastName){%>
                                        <span class="text-danger"> <%= errors.lastName.msg %></span>
                                        <%}%>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-pill email" name="email"
                                    value="<%= typeof old != 'undefined' ? old.email : '' %>" placeholder="e-mail" >
                                    <% if(typeof errors != 'undefined' && errors.email){%>
                                        <span class="text-danger"> <%= errors.email.msg %></span>
                                        <%}%>
                                </div>
                                <div class="form-group">
                                    <i class="togglePassword fas fa-eye text-decoration-none eye"></i>
                                    <input type="password" class="password form-control rounded-pill" name="password"
                                        placeholder="contraseña">
                                        <% if(typeof errors != 'undefined' && errors.password){%>
                                            <span class="text-danger"> <%= errors.password.msg %></span>
                                            <%}%>
                                </div>
                                <div id="message" class="form-group">
                                    <h3>La contraseña debe contener:</h3>
                                    <p id="letter" class="is-invalid"> 1 <b>minúscula</b></p>
                                    <p id="capital"class="is-invalid"> 1 <b>mayúscula</b></p>
                                    <p id="number" class="is-invalid"> 1 <b>número</b></p>
                                    <p id="length" class="is-invalid"> 6 <b>caracteres</b></p>
                                </div>
                                <div class="form-check ml-2">
                                    <input class="form-check-input" checked="checked" type="checkbox" value=""
                                        id="quieroPromociones">
                                    <label class="form-check-label" for="quieroPromociones">
                                        <p class="ml-1">Quiero recibir mensajes y promociones de Memories.</p>
                                    </label>
                                </div>
                                <div class="form-check ml-2">
                                    <input class="form-check-input" checked="checked" type="checkbox" value="" id="aceptoTerminos">
                                    <label class="form-check-label" for="aceptoTerminos">
                                        <p class="ml-1">He leído y acepto los <a href="/terminos-y-condiciones">Términos
                                                y Condiciones.</a>
                                        </p>
                                    </label>
                                </div>
                                <div id="btn-crearCuenta" class="form-group text-center btn-block">
                                    <button type="submit"
                                        class="btn btn-info btn-primary btn-lg btn-block rounded-pill">Crear
                                        cuenta</button>
                                </div>
                            </form>
                            <div class="text-center mb-3">
                                <p>¿Ya tenés cuenta? <a href="/login">¡INGRESÁ ACA!</a></p>
                            </div>
                        </div>
                    </div>
                </div>

        </section>
        <div class="separador"></div>
        <%- include('../partials/footerPartial.ejs') %>
        <%- include('../partials/jsPartials.ejs') %>

    </div>
    <script src="/js/registerValidation.js"></script>
</body>

</html>