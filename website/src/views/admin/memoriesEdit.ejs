<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>Agregar Producto | MEMORIES</title>
</head>

<body>
    <%- include('../partials/headerAdminPartial.ejs') %>
    <div class="container-fluid">


        <!-- Cuerpo principal -->

        <section class="row">
            <article class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Agregar nuevo pack de Memories</h1>


                </div>
            </article>
        </section>

        <section id="formulario" class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 col-sm-10 col-xs-12 mx-auto bg-light shadow-sm">
                        <div class="signup-form mt-2">
                            <form action="/admin/listado-memories/edit/<%= product.sku%>?_method=PUT" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control rounded-pill" name="name" value ='<%= product.name%>' required="required">
                                </div>
                                <div class="form-group">
                                    <label for="description">Descripción</label>
                                    <input type="text" class="form-control rounded-pill" name="description"
                                    value ='<%= product.description%>' rows="3">
                                </div>
                                <div class="form-group">
                                    <label for="image">Imagen</label>
                                    <input type="file" class="form-control-file rounded" id="imagen-producto" name="image">
                                </div>
                                <div class="form-group">
                                    <label for="visibility">Visibilidad</label>
                                    <select id="visibility" class="form-control rounded-pill" name="visibility">
                                        <option <% if (product.visibility == "true") {%> selected <% } %>>true</option>
                                        <option <% if (product.visibility == "false") {%> selected <% } %>>false</option>  
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="price">Precio $</label>
                                    <input type="number" class="form-control rounded-pill" name="price"
                                    value ='<%= product.price%>' required="required">
                                </div>
                                <div class="form-group">
                                    <label for="special_price">Precio Especial $</label>
                                    <input type="number" class="form-control rounded-pill" name="special_price"
                                    value ='<%= product.special_price%>' required="required">
                                </div>
                                <div class="form-group">
                                    <label for="qty">Stock</label>
                                    <input type="number" class="form-control rounded-pill" name="qty"
                                    value ='<%= product.qty%>' required="required">
                                </div>
                                <div class="form-group">
                                    <label for="categories">Categoría</label>
                                    <select id="categories" class="form-control rounded-pill" name="categories">
                                        <option <% if (product.categories == "aventura") {%> selected <% } %>>Aventura</option>
                                        <option <% if (product.categories == "bienestar") {%> selected <% } %>>Bienestar</option> 
                                        <option <% if (product.categories == "cursos") {%> selected <% } %>>Cursos</option> 
                                        <option <% if (product.categories == "entretenimiento") {%> selected <% } %>>Entretenimiento</option> 
                                        <option <% if (product.categories == "escapadas") {%> selected <% } %>>Escapadas</option> 
                                        <option <% if (product.categories == "gastronomia") {%> selected <% } %>>Gastronomía</option> 
                                    </select>
                                </div>
                                <div class="col-8 mx-auto bg-light pt-4 shadow-sm">
                                    <div id="btn-volver" class="form-group float-left">
                                        <a href="/admin/listado-memories"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver al Listado</button></a>
                                    </div>
                                    <div id="btn-guardar" class="form-group float-right">
                                    <button type="submit" class="btn btn btn-info rounded-pill">Actualizar</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </section>
    <%- include('../partials/jsPartials.ejs') %>
</body>

</html>