        <!-- Cuerpo principal -->

        <section class="row">
            <article class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Agregar nuevo pack de Memories</h1>


                </div>
            </article>
        </section>

        <section id="formulario" class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 col-sm-10 col-xs-12 mx-auto bg-light shadow-sm">
                        <div class="signup-form mt-2">
                            <form action="/admin/memoriesCreate" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control rounded-pill" name="name"
                                        placeholder="Ej: Take Away" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="description">Descripción</label>
                                    <textarea class="form-control rounded-lg" name="description"
                                        placeholder="Ej: Delicias para disfrutar en casa" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="image">Imagen</label>
                                    <input type="file" class="form-control-file rounded" id="imagen-producto" name="image">
                                </div>
                                <div class="form-group">
                                    <label for="visibility">Visibilidad</label>
                                    <select id="visibility" class="form-control rounded-pill" name="visibility">
                                        <option value="true">true</option>
                                        <option value="false">false</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="price">Precio $</label>
                                    <input type="number" class="form-control rounded-pill" name="price"
                                        placeholder="Ej: 1899" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="special_price">Precio Especial $</label>
                                    <input type="number" class="form-control rounded-pill" name="special_price"
                                        placeholder="Ej: 1899" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="qty">Stock</label>
                                    <input type="number" class="form-control rounded-pill" name="qty"
                                        placeholder="Ej: 100" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="categories">Categoría</label>
                                    <select id="categories" class="form-control rounded-pill" name="categories">
                                        <option value="aventura">Aventura</option>
                                        <option value="bienestar">Bienestar</option>
                                        <option value="cursos">Cursos</option>
                                        <option value="entrenimiento">Entretenimiento</option>
                                        <option value="escapadas">Escapadas</option>
                                        <option value="gastronomia">Gastronomía</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="associated">Incluir Experiencias</label>
                                    <div id="container-associated">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1" name="associated">
                                            <label class="form-check-label" for="associated">La Bistecca</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia2"
                                                value="experiencia2" name="associated">
                                            <label class="form-check-label" for="associated">Baum Cervecería</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Tucson</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Sipan</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Kansas</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">La Bistecca</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Georgie's</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Siga la Vaca</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">Los Maizales</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">La Parolaccia</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="associated">La Birra</label>
                                        </div>
                                        <div class="form-check form-check-inline">
