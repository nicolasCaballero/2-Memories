        <section id="formulario" class="bg-home pt-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 col-sm-10 col-xs-12 mx-auto bg-light shadow-sm">
                        <div class="signup-form mt-2">
                            <form action="/admin/create" method="post" enctype="application/x-www-form-urlencoded">
                                <div class="form-group">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" class="form-control rounded-pill" name="nombre"
                                        placeholder="Ej: Take Away" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="descripción">Descripción</label>
                                    <textarea class="form-control rounded-lg" name="descripcion"
                                        placeholder="Ej: Delicias para disfrutar en casa" rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="imagen-producto">Imagen</label>
                                    <input type="file" class="form-control-file rounded" id="imagen-producto">
                                </div>
                                <div class="form-group">
                                    <label for="precio">Precio $</label>
                                    <input type="number" class="form-control rounded-pill" name="precio"
                                        placeholder="Ej: 1899" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="sku">SKU</label>
                                    <input type="text" class="form-control rounded-pill" name="sku"
                                        placeholder="Ej: #100-10001" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="select-category">Categoría</label>
                                    <select id="select-category" class="form-control rounded-pill">
                                        <option selected>Seleccionar</option>
                                        <option>Aventura</option>
                                        <option>Bienestar</option>
                                        <option>Cursos</option>
                                        <option>Entretenimiento</option>
                                        <option>Escapadas</option>
                                        <option>Gastronomía</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="experiencias">Incluir experiencias</label>
                                    <div id="container-experiencias">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">La Bistecca</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">Baum Cervecería</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">Tucson</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">Sipan</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">Kansas</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">La Bistecca</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="checkbox" id="experiencia1"
                                                value="experiencia1">
                                            <label class="form-check-label" for="experiencias">Georgie's</label>
