<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>CREACION USUARIO ADMIN | MEMORIES ADMIN</title>
</head>

<body id="body-login">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm fixed-top">
            <a href="/admin" class="navbar-center"><img src="/img/logo-memories-md.png" width="75px"></a>
        </nav>
    </header>
    <div class="container-fluid">
        <section class="row">
            <article id="tituloAdmin" class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Creá tu usuario Administrador</h1>
                    <% if (typeof errors != 'undefined') { %>
                        <div class="alert alert-warning" role="alert">
                            <ul>
                                <% for(let i = 0; i < errors.length; i++) { %>
                                <li>
                                    <%= errors[i].msg %>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                        <% } %>
                </div>
            </article>
        </section>
        <section class="bg-home pt-15">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-6 col-md-10 col-sm-12 mx-auto pt-2 fondo shadow-sm rounded-lg">
                        <div class="signup-form mt-3">
                            <form action="/admin/registro" method="post" novalidate>
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-pill" name="name"
                                        placeholder="name" required="required">
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control rounded-pill" name="username"
                                        placeholder="username" required="required">
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control rounded-pill" name="email"
                                        placeholder="e-mail" required="required">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control rounded-pill" name="password"
                                        placeholder="password" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="role">role</label>
                                    <select id="role" class="form-control rounded-pill" name="role">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                    </select>
                                </div>
                                <div id="btn-crearCuenta" class="form-group text-center btn-block">
                                    <button type="submit"
                                        class="btn btn-info btn-primary btn-lg btn-block rounded-pill">Crear
                                        cuenta</button>
                                </div>
                            </form>
                            <div class="text-center mb-3">
                                <p>¿Ya tenés cuenta? <a href="/admin/login">INGRESA</a></p>
                            </div>
                        </div>
                    </div>
                </div>

        </section>
    <%- include('../partials/jsPartials.ejs') %>
</body>

</html>