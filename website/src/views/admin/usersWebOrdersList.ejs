<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>Listado de Órdenes | MEMORIES</title>
</head>

<body>
<%- include('../partials/headerAdminPartial.ejs') %>
    <div class="container-fluid">
        <section class="row">
            <article id="tituloAdmin" class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Historial de Compras</h1>
                </div>
            </article>
        </section>
        <section class="row">
            <article id="userID" class="col-12 card border-0 bg-light">
                <div class="card-body">
                    <p class="card-text"><strong> User ID: </strong> <%= users[0].id %> </p>
                    <p class="card-text"><strong> e-mail: </strong><%= users[0].email %></p>
                    <p class="card-text"><strong> Nombre: </strong><%= users[0].name %></p>
                    <p class="card-text"><strong> Apellido: </strong><%= users[0].lastName %></p>
                </div>
            </article>
        </section>
        <% if (cart.length != 0) { %>
            <table class="table mt-2 border-bottom">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"># Orden</th>
                        <th scope="col">Fecha de compra</th>
                        <th scope="col">Status</th>
                        <th scope="col">Precio Total $</th>
                        <th scope="col">Ver Detalle</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < cart.length; i++ ) { %>
                        <tr>
                            <td scope="row"><%= cart[i].id %>  </td>
                            <td><%=new Date(cart[i].createdAt).getDate() + '-' + (new Date(cart[i].createdAt).getMonth() + 1) +  '-' + new Date(cart[i].createdAt).getFullYear()%></td>
                            <td>Aprobado </td>
                            <td>$<%= toThousand(cart[i].total) %></td>
                            <td><a id="btn-view" class=" text-decoration-none" href="/admin/orders/detail/"><i class="fas fa-eye text-decoration-none"></i></a></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else {%>
            <div class="col-12">
                <div class="text-center mb-3 mt-3"><img class="mb-2" src="/img/empty-wallet.png" width="5%" alt="Billetera Vacia"></div>
               <h2 class="text-center mt-2">Este usuario todavía no tiene órdenes</h2>
            </div>
        <% } %> 
        <div class="col-12 mx-auto  pt-4 ">
            <div id="btn-volver" class="form-group float-left">
                <a href="/admin/registered-users"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver</button></a>
            </div>
        </div>
    </div>
    <%- include('../partials/jsPartials.ejs') %>
</body>
</html>