<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>Listado de Usuarios Admin | MEMORIES</title>
</head>

<body>
    <script>
        function asegurar() {
            rc = confirm("Â¿Seguro que desea Eliminar?");
            return rc;
        }
    </script>
<%- include('../partials/headerAdminPartial.ejs') %>
    <div class="container-fluid">
        <section class="row">
            <article id="tituloAdmin" class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Listado de Usuarios Registrados Web</h1>
                </div>
            </article>
        </section>
        <table class="table mt-2 border-bottom">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Ver Historial de Compras</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < users.length; i++ ) { %>
                    <tr>
                        <td scope="row"><%= users[i].id %></td>
                        <td><%= users[i].email %> </td>
                        <td><%= users[i].name %></td>
                        <td><%= users[i].lastName %></td>
                        <td><a id="btn-view" class=" text-decoration-none" href="/admin/registered-users/sales/<%= users[i].id %>"><i class="fas fa-eye text-decoration-none"></i></a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="col-12 mx-auto  pt-4 ">
            <div id="btn-volver" class="form-group float-left">
                <a href="/admin"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver</button></a>
            </div>
        </div>
    </div>
<%- include('../partials/jsPartials.ejs') %>
</body>
</html>