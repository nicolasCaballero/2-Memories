</head>

<body>
    <%- include('../partials/headerAdminPartial.ejs') %>
    <section class="row">
        <article id="tituloAdmin" class="col-12 card pt-5 border-0">
            <div class="card-body">
                <h1 class="card-title text-center">Administración de Productos</h1>


            </div>
        </article>
    </section>

    <div class="container">
        <div id="adminProductos" class="row justify-content-md-center">
          <div class="col text-center">
            <h3>Packs de Memories</h3>
            <div class="d-flex flex-column">
                <button type="button" class="btn btn-light mb-3"><a class="text-decoration-none" href="/admin/memoriesCreate">Agregar nuevo pack<i
                    class="fas fa-plus-circle ml-2"></i></a></button>
