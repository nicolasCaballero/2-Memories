<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>Listado de Órdenes | MEMORIES</title>
</head>

<body>
<%- include('../partials/headerAdminPartial.ejs') %>
    <div class="container-fluid">
        <section class="row">
            <article id="tituloAdmin" class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Listado de Órdenes</h1>
                </div>
            </article>
        </section>
        <table class="table mt-2 border-bottom">
            <thead class="thead-dark">
                <tr>
                    <th scope="col"># Orden</th>
                    <th scope="col">Fecha de compra</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">e-mail</th>
                    <th scope="col">Status</th>
                    <th scope="col">Precio Total $</th>
                    <th scope="col">Ver Detalle</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i = 0; i < carts.length; i++ ) { %>
                    <tr>
                        <td scope="row"><%= carts[i].id %> </td>
                        <td><%=new Date(carts[i].createdAt).getDate() + '-' + (new Date(carts[i].createdAt).getMonth() + 1) +  '-' + new Date(carts[i].createdAt).getFullYear()%></td>
                        <td><%= carts[i].user.name %> </td>
                        <td><%= carts[i].user.lastName %> </td>
                        <td><%= carts[i].user.email %> </td>
                        <td>Aprobado </td>
                        <td>$<%= toThousand(carts[i].total) %></td>
                        <td><a id="btn-view" class=" text-decoration-none" href="/admin/orders/detail/<%= carts[i].id %>"><i class="fas fa-eye text-decoration-none"></i></a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="col-12 mx-auto  pt-4 ">
            <div id="btn-volver" class="form-group float-left">
                <a href="/admin"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver</button></a>
            </div>
        </div>
    </div>
    <%- include('../partials/jsPartials.ejs') %>
</body>
</html>