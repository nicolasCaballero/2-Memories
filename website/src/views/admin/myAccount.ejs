<!doctype html>
<html lang="es">

<head>
    <%- include('../partials/headPartial.ejs') %>
    <link rel="stylesheet" href="/css/admin/admin.css">
    <title>Mi Cuenta | MEMORIES</title>
</head>

<body>
<%- include('../partials/headerAdminPartial.ejs') %>
    <div class="container-fluid">
        <section class="row">
            <article class="col-12 card pt-5 border-0">
                <div class="card-body">
                    <h1 class="card-title text-center">Â¡Hola <%= user.name %> ! </h1>
                </div>
            </article>
        </section>
        <section class="bg-white pt-4">
            <div class="container">
                <div class="row mb-4" >
                    <div class="col-8 mx-auto bg-light shadow-sm">
                        <div class="card">
                            <ul class="list-group">
                                <li class="list-group-item text-center"><img width="20%" class="rounded-circle" src="/img/adminUsers/<%= user.photo%>" alt=""></li>
                                <li class="list-group-item"><strong>ID: </strong><%= user.id%></li>
                                <li class="list-group-item"><strong>Nombre: </strong><%= user.name%></li>
                                <li class="list-group-item"><strong>Username: </strong><%= user.username%></li>
                                <li class="list-group-item"><strong>Email: </strong><%= user.email%></li>
                                <% if (user.role == 1) { %>
                                    <li class="list-group-item"><strong>Rol: </strong><%= user.role + ' -Full Administrator'%></li>
                                <% } %>
                                <% if (user.role == 2) { %>
                                    <li class="list-group-item"><strong>Rol: </strong><%= user.role + ' -Basic Administrator'%></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <% if (loggedInAdminUser.role == 1) { %>
                        <div class="col-8 mx-auto bg-light pt-4 shadow-sm">
                            <div id="btn-volver" class="form-group float-left">
                                <a href="/admin/users/list"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver al listado</button></a>
                            </div>
                            <div id="btn-edit" class="form-group float-right">
                                <a href="/admin/users/list/edit/<%= user.id%>"><button class="btn btn-info rounded-pill">Editar<i class="fas fa-edit text-decoration-none ml-1"></i></button></a>
                            </div>
                        </div>
                    <% } %>
                    <% if (user.role == 2 && loggedInAdminUser.role != 1) { %>
                        <div class="col-8 mx-auto bg-light pt-4 shadow-sm">
                            <div id="btn-volver" class="form-group float-left">
                                <a href="/admin"><button class="btn btn-secondary rounded-pill"><i class="fas fa-arrow-left mr-1"></i>Volver al Inicio</button></a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>
    </div>
<%- include('../partials/jsPartials.ejs') %>
</body>
</html>